<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
   android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:gravity="center"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#43A047"
        android:id="@+id/tvCauHoiThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy trả lời câu hỏi sau" />
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:id="@+id/tvQuestionOneSp"
            android:text="Câu hỏi đầu tiên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_weight="0.2"
            android:id="@+id/spinnerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:id="@+id/tvQuestionTwoSp"
            android:text="Câu hỏi thứ hai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_weight="0.2"
            android:id="@+id/spinnerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:background="#7CB342"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPreviousSP"
            android:layout_marginRight="10dp"
            android:background="#FF9800"
            android:text="Trước"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnResultSP"
            android:layout_marginRight="10dp"
            android:background="#FF9800"
            android:text="RESULT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnNextSP"
            android:background="#FF9800"
            android:text="Sau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>