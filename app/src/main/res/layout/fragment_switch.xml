<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#43A047"
        android:id="@+id/tvCauHoiFive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy trả lời câu hỏi sau" />
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:layout_weight="2"
            android:id="@+id/tvQuestionOneSw"
            android:text="Câu hỏi đầu tiên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:text="Đúng"
            android:layout_weight="0.2"
            android:id="@+id/switchQsOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Switch>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:layout_weight="2"
            android:id="@+id/tvQuestionTwoSw"
            android:text="Câu hỏi thứ hai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:text="Đúng"
            android:layout_weight="0.2"
            android:id="@+id/switchQsTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Switch>
    </LinearLayout>
    <LinearLayout
        android:background="#7CB342"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPreviousSW"
            android:layout_marginRight="10dp"
            android:background="#FF9800"
            android:text="Trước"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnResultSW"
            android:layout_marginRight="10dp"
            android:background="#FF9800"
            android:text="RESULT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnNextSW"
            android:background="#FF9800"
            android:text="Sau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>